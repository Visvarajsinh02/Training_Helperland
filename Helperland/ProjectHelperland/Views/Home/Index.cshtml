@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Helperland|Home";
    Layout = "~/Views/Shared/HomePageLayout.cshtml";
}

<div class="banner-image ">
