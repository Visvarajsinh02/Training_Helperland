<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="shortcut icon" href="~/images/favicon_img.png" type="image/x-icon">
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg align-items-center navbar-dark faq_nav_bg">
            <div class="container-fluid">
                <a asp-action="Index" asp-controller="Home"><img src="/images/logo-small.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="mx-auto"></div>
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a href="#" class="nav-item text-white head_item faq_active">Book a Cleaner</a>
                        </li>
                        <li class="nav-item ">
                            <a asp-action="Price" asp-controller="Home" class="nav-item text-white head_item home_active">Prices & Services</a>
                        </li>
                        <li class="nav-item ">
                            <a href="#" class="nav-item text-white head_item none_active">Warranty</a>
                        </li>
                        <li class="nav-item ">
                            <a href="#" class="nav-item text-white head_item none_active">Blog</a>
                        </li>
                        <li class="nav-item ">
                            <a asp-action="Contact" asp-controller="Home" class="nav-item text-white head_item none_active">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index_Login" asp-controller="Home" class="nav-item text-white head_item faq_active">
                                Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="SpSignUp" asp-controller="Home" class="nav-item text-white head_item faq_active">Become a Helper</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


    </header>
    <div>
        @RenderBody()
    </div>
    <footer class="site-footer">
        <div class="footer-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 footer-widget">
                        <a asp-action="Index" asp-controller="Home" title="Helper Hand">
                            <img src="/images/footer-logo.png" alt="Helper Hand">
                        </a>
                    </div>
                    <div class="col-lg-8 footer-widget">
                        <ul class="footer-navigation d-flex justify-content-center">
                            <li>
                                <a asp-action="Index" asp-controller="Home" title="Home">Home</a>
                            </li>
                            <li>
                                <a asp-action="About" asp-controller="Home" title="About">About</a>
                            </li>
                            <li>
                                <a href="#" title="Testimonials">Testimonials</a>
                            </li>
                            <li>
                                <a asp-action="Faq" asp-controller="Home" title="FAQs">FAQs</a>
                            </li>
                            <li>
                                <a href="#" title="Insurance Policy">Insurance Policy</a>
                            </li>
                            <li>
                                <a href="#" title="Impressum">Impressum</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-2 footer-widget">
                        <ul class="social-media-list d-flex justify-content-end">
                            <li>
                                <a href="#" target="_blank" title="Facebook">
                                    <img src="/images/ic-facebook.png" alt="Facebook">
                                </a>
                            </li>
                            <li>
                                <a href="#" target="_blank" title="Instagram">
                                    <img src="/images/ic-instagram.png" alt="Instagram">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-lg-12 p-0">
                        <hr class="footer-separator">
                    </div>
                </div>
                <div class="row faq-policy text-center">
                    <p>©2018 Helperland. All rights reserved. Terms and Conditions | Privacy Policy</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/general.js"></script>
    
    

</body>
</html>
